rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ВСЕ могут читать товары, категории и пользователей
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /spicer_products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /orders/{orderId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Настройки сайта (CMS)
    match /site_settings/{docId} {
      allow read: if true;
      allow write: if request.auth != null; // можно сузить до админов, если добавить custom claims
    }

    // Просмотры товаров (статистика)
    match /product_views/{docId} {
      allow read: if true;
      allow write: if request.auth != null; // инкремент просмотров после авторизации
    }

    // Уникальные посетители (для логирования анонимных заходов)
    match /visitors/{docId} {
      allow read: if true;
      allow write: if true; // разрешено без авторизации для записи посещений
    }

    // Bug Reports (Visual Feedback Tool)
    match /bug_reports/{reportId} {
      // Читання: тільки адміни та тестувальники
      allow read: if request.auth != null && 
                     (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true ||
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isTester == true);
      
      // Створення: тільки авторизовані користувачі з роллю
      allow create: if request.auth != null && 
                       (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true ||
                        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isTester == true) &&
                       request.resource.data.userId == request.auth.uid;
      
      // Оновлення: тільки адміни (для зміни статусу)
      allow update: if request.auth != null && 
                       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      
      // Видалення: тільки адміни
      allow delete: if request.auth != null && 
                       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
